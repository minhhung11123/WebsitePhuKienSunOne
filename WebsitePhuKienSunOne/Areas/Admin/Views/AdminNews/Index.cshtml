@model IEnumerable<WebsitePhuKienSunOne.Models.News>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-title">
    <div class="title_left">
        <h3>Danh sách tin tức</h3>
    </div>
</div>


<div class="clearfix"></div>
<a asp-controller="AdminNews" asp-action="Create" class="btn btn-round btn-primary">Tạo tin tức mới</a>

<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_content">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-box table-responsive">
                            <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Tiêu Đề</th>
                                        <th>Ngày Tạo</th>
                                        <th>Tác Giả</th>
                                        <th>Lượt Xem</th>
                                        <th>Trạng Thái</th>
                                        <th>#</th>
                                    </tr>
                                </thead>


                                <tbody>
                                    @if (Model != null)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.PostId</td>
                                                <td>@item.Title</td>
                                                <td>@item.CreateDate.Value.ToString("HH:mm dd/MM/yyyy")</td>
                                                <td>@item.Author</td>
                                                <td>@item.Views</td>
                                                <td>
                                                    @if (item.Published == true)
                                                    {
                                                        <span class="badge badge-primary">Hiển Thị</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-secondary">Không Hiển Thị</span>
                                                    }
                                                </td>
                                                <td>
                                                    <a class="fa fa-search" asp-controller="AdminNews" asp-action="Details" asp-route-id="@item.PostId"> Xem</a>
                                                    &nbsp&nbsp&nbsp
                                                    <a class="fa fa-pencil" asp-controller="AdminNews" asp-action="Edit" asp-route-id="@item.PostId"> Sửa</a>
                                                    &nbsp&nbsp&nbsp
                                                    <a class="fa fa-remove" asp-controller="AdminNews" asp-action="Delete" asp-route-id="@item.PostId"> Xóa</a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
