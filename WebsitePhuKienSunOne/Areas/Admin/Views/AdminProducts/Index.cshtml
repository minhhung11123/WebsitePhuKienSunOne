@model IEnumerable<WebsitePhuKienSunOne.Models.Product>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-title">
    <div class="title_left">
        <h3>Danh sách sản phẩm</h3>
    </div>
</div>

<div class="clearfix"></div>
<a asp-controller="AdminProducts" asp-action="Create" class="btn btn-round btn-primary">Thêm mới sản phẩm</a>

<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_content">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-box table-responsive">
                            <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Tên sản phẩm</th>
                                        <th>Mô tả ngắn</th>
                                        <th>Danh mục</th>
                                        <th>Giá</th>
                                        <th>Tồn kho</th>
                                        <th>HomeFlag</th>
                                        <th>Trạng thái</th>
                                        <th>#</th>
                                    </tr>
                                </thead>

                                <tbody id="records_table">
                                    @if (Model != null)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.ProductId</td>
                                                <td>@item.ProductName</td>
                                                <td>@item.ShortDesc</td>
                                                <td>@item.Cat.CatName</td>
                                                <td>@item.Price.Value.ToString("#,##0") VND</td>
                                                <td>@item.UnitslnStock</td>
                                                <td>
                                                    @if (item.HomeFlag)
                                                    {
                                                        <p>X</p>
                                                    }
                                                </td>
                                                <td>
                                                    @if (item.UnitslnStock > 0)
                                                    {
                                                        <span class="badge badge-primary">Còn hàng</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-secondary">Hết hàng</span>
                                                    }
                                                </td>
                                                <td>
                                                    <a class="fa fa-search" asp-controller="AdminProducts" asp-action="Details" asp-route-id="@item.ProductId"> Xem</a>
                                                    &nbsp&nbsp&nbsp
                                                    <a class="fa fa-pencil" asp-controller="AdminProducts" asp-action="Edit" asp-route-id="@item.ProductId"> Sửa</a>
                                                    &nbsp&nbsp&nbsp
                                                    <a class="fa fa-remove" asp-controller="AdminProducts" asp-action="Delete" asp-route-id="@item.ProductId"> Xóa</a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>