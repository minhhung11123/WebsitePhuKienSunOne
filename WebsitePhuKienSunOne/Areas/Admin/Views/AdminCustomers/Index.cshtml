@model IEnumerable<WebsitePhuKienSunOne.Models.Customer>

@{
    ViewData["Title"] = "Danh sách khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-title">
    <div class="title_left">
        <h3>Danh sách khách hàng</h3>
    </div>
</div>

<div class="clearfix"></div>

<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_content">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-box table-responsive">
                            <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Họ tên</th>
                                        <th>Email</th>
                                        <th>Số điện thoại</th>
                                        <th>Địa chỉ</th>
                                        <th>Tỉnh/Thành</th>
                                        <th>Kích hoạt</th>
                                        <th>#</th>
                                    </tr>
                                </thead>


                                <tbody>
                                    @if (Model != null)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.CustomerId</td>
                                                <td>@item.FullName</td>
                                                <td>@item.Email</td>
                                                <td>@item.Phone</td>
                                                <td>@item.Address</td>
                                                @if(item.LocationId == null)
                                                {
                                                    <td></td>
                                                }
                                                else
                                                {
                                                    <td>@item.Location.Name</td>
                                                }
                                                <td>
                                                    @if (item.Active == true)
                                                    {
                                                        <span class="badge badge-primary">Kích hoạt</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-secondary">Khóa</span>
                                                    }
                                                </td>
                                                <td>
                                                    <a class="fa fa-search" asp-controller="AdminCustomers" asp-action="Details" asp-route-id="@item.CustomerId"> Xem</a>
                                                    &nbsp&nbsp&nbsp
                                                    <a class="fa fa-pencil" asp-controller="AdminCustomers" asp-action="LockCustomer" asp-route-id="@item.CustomerId">Khóa tài khoản</a>
                                                    &nbsp&nbsp&nbsp
                                                    <a class="fa fa-pencil" asp-controller="AdminCustomers" asp-action="NewPassword" asp-route-id="@item.CustomerId">Mật khẩu mới</a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
