@model List<Product>

@if (Model != null)
{
    foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductId</td>
            <td>@item.ProductName</td>
            <td>@item.ShortDesc</td>
            <td>@item.Cat.CatName</td>
            <td>@item.Price.Value.ToString("#,##0") VND</td>
            <td>@item.UnitslnStock</td>
            <td>
                @if (item.UnitslnStock > 0)
                {
                    <span class="badge badge-primary">Còn hàng</span>
                }
                else
                {
                    <span class="badge badge-secondary">Hết hàng</span>
                }
            </td>
            <td>
                <a class="fa fa-search" asp-controller="AdminProducts" asp-action="Details" asp-route-id="@item.ProductId"> Xem</a>
                &nbsp&nbsp&nbsp
                <a class="fa fa-pencil" asp-controller="AdminProducts" asp-action="Edit" asp-route-id="@item.ProductId"> Sửa</a>
                &nbsp&nbsp&nbsp
                <a class="fa fa-remove" asp-controller="AdminProducts" asp-action="Delete" asp-route-id="@item.ProductId"> Xóa</a>
            </td>
        </tr>
    }
}
