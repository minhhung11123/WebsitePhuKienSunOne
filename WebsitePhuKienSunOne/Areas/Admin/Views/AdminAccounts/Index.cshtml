@model IEnumerable<WebsitePhuKienSunOne.Models.Account>

@{
    ViewData["Title"] = "Danh sách tài khoản quản trị";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-title">
    <div class="title_left">
        <h3>Danh sách tài khoản quản trị</h3>
    </div>
</div>

<div class="clearfix"></div>

<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_content">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-box table-responsive">
                            <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Họ tên</th>
                                        <th>Email</th>
                                        <th>Số điện thoại</th>
                                        <th>Quyền truy cập</th>
                                        <th>Lần đăng nhập cuối</th>
                                        <th>Trạng thái</th>
                                        <th>#</th>
                                    </tr>
                                </thead>


                                <tbody>
                                    @if (Model != null)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.AccountId</td>
                                                <td>@item.FullName</td>
                                                <td>@item.Email</td>
                                                <td>@item.Phone</td>
                                                <td>@item.Role.Description</td>
                                                <td>@item.LastLogin</td>
                                                <td>@if(item.Active)
                                                    {
                                                        <span class="badge badge-primary">Kích hoạt</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-secondary">Khóa</span>
                                                    }
                                                </td>
                                                <td>
                                                    <a class="fa fa-search" asp-controller="AdminAccounts" asp-action="Details" asp-route-id="@item.AccountId"> Xem</a>
                                                    &nbsp&nbsp&nbsp
                                                    <a class="fa fa-pencil" asp-controller="AdminAccounts" asp-action="Edit" asp-route-id="@item.AccountId"> Sửa</a>
                                                    &nbsp&nbsp&nbsp
                                                    <a class="fa fa-remove" asp-controller="AdminAccounts" asp-action="Delete" asp-route-id="@item.AccountId"> Xóa</a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
