@model IEnumerable<WebsitePhuKienSunOne.Models.Location>

@{
    ViewData["Title"] = "Danh sách tỉnh thành";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-title">
    <div class="title_left">
        <h3>Danh sách tỉnh thành</h3>
    </div>
</div>

<div class="clearfix"></div>
<a asp-controller="AdminLocations" asp-action="Create" class="btn btn-round btn-primary">Thêm tỉnh thành</a>

<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_content">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-box table-responsive">
                            <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Tên Tỉnh Thành</th>
                                        <th>Tên Cấp</th>
                                        <th>Cấp</th>
                                        <th>Code</th>
                                        <th>Parent Code</th>
                                        <th>#</th>
                                    </tr>
                                </thead>

                                <tbody id="records_table">
                                    @if (Model != null)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.LocationId</td>
                                                <td>@item.Name</td>
                                                <td>@item.Type</td>
                                                <td>@item.Levels</td>
                                                <td>@item.Code</td>
                                                <td>@item.ParentCode</td>
                                                <td>
                                                    <a class="fa fa-pencil" asp-controller="AdminLocations" asp-action="Edit" asp-route-id="@item.LocationId"> Sửa</a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>