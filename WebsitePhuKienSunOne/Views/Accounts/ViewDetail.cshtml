@model WebsitePhuKienSunOne.Models.Order

@{
    ViewData["Title"] = "Thông tin đơn hàng - " + Model.OrderId;
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<OrderDetail> listOd = ViewBag.OrderDetails;
}

<section class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="content">
                    <h1 class="page-name">Thông tin đơn hàng</h1>
                    <ol class="breadcrumb">
                        <li><a href="/">Trang chủ</a></li>
                        <li class="active">Thông tin đơn hàng</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>


<div class="page-wrapper">
    <div class="purchase-confirmation shopping">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <div class="block ">
                        <div class="purchase-confirmation-details">
                            <table id="purchase-receipt" class="table">
                                <thead>
                                    <tr>
                                        <th><strong>ID Đơn Hàng:</strong></th>
                                        <th>#@Model.OrderId</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <tr>
                                        <td><strong>Ngày đặt hàng:</strong></td>
                                        <td>@Model.OrderDate</td>
                                    </tr>
                                    <tr>
                                        <td class=""><strong>Họ Tên:</strong></td>
                                        <td class="">@Model.Customer.FullName</td>
                                    </tr>


                                    <tr>
                                        <td><strong>Email:</strong></td>
                                        <td>@Model.Customer.Email</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Số Điện Thoại:</strong></td>
                                        <td>@Model.Customer.Phone</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Địa chỉ</strong></td>
                                        <td>
                                            @Model.Customer.Address, @Model.WardNavigation.Name,  @Model.DistrictNavigation.Name, @Model.CityNavigation.Name
                                        </td>
                                    </tr>

                                    <tr>
                                        <td><strong>Tổng tiền:</strong></td>
                                        <td>@Model.TotalMoney.ToString("#,##0") VNĐ</td>
                                    </tr>

                                    <tr>
                                        <td><strong>Trạng thái:</strong></td>
                                        <td>@Model.TransactStatus.Description</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-md-8 col-md-offset-2">
                    <h2>Sản phẩm đã mua</h2>
                    <div class="block ">
                        <div class="purchase-confirmation-details">
                            <table id="purchase-receipt" class="table">
                                <thead>
                                    <tr>
                                        <th>Tên sản phẩm </th>
                                        <th>Số lượng</th>
                                        <th>Đơn giá</th>
                                        <th>Thành tiền</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <tr>
                                        @if(listOd != null && listOd.Count > 0)
                                        {
                                            foreach(var item in listOd)
                                            {
                                                <td>@item.Product.ProductName</td>
                                                <td>@item.Quantity</td>
                                                <td>@item.Price.Value.ToString("#,##0") VNĐ</td>
                                                <td>@item.Total.Value.ToString("#,##0") VNĐ</td>
                                            }
                                        }
                                    </tr>                                   
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>