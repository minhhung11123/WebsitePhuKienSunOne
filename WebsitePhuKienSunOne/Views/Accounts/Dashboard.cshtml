@using Microsoft.AspNetCore.Http;
@model List<WebsitePhuKienSunOne.Models.Order>
@inject IHttpContextAccessor Accessor

@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var avatar = ViewBag.Avatar;
}

<section class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="content">
                    <h1 class="page-name">Danh sách đơn hàng</h1>
                    <ol class="breadcrumb">
                        <li><a href="/">Trang chủ</a></li>
                        <li class="active">Tài khoản của tôi</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="user-dashboard page-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <ul class="list-inline dashboard-menu text-center">
                    <li><a href="Dashboard.html">Danh sách đơn hàng</a></li>
                    <li><a href="Profile.html">Thông tin tài khoản</a></li>
                </ul>
                <div class="dashboard-wrapper user-dashboard">
                    <div class="table-responsive">
                        @if (Model != null && Model.Count() > 0)
                        {
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Ngày mua</th>
                                        <th>Ngày giao hàng</th>
                                        <th>Trạng thái</th>
                                        <th>Tổng tiền</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>#@item.OrderId</td>
                                            <td>@item.OrderDate.Value.ToShortDateString()</td>
                                            <td>@item.ShipDate</td>
                                            <td><span class="@item.TransactStatus.Class">@item.TransactStatus.Status</span></td>
                                            <td>@item.TotalMoney.ToString("#,##0") VND</td>
                                            <td><a href="/viewdetail-@item.OrderId" class="btn btn-default">View</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <p>Chưa có đơn hàng</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>