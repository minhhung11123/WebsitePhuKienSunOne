@model List<WebsitePhuKienSunOne.ModelViews.CartItem>
<li class="dropdown cart-nav dropdown-slide">
    @if (Model != null && Model.Count() > 0)
    {
        <a href="cart.html" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown">
            <i class="tf-ion-android-cart"></i>Giỏ hàng(@Model.Count())
        </a>
    }
    else
    {
        <a href="cart.html" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown">
            <i class="tf-ion-android-cart"></i>Giỏ hàng
        </a>
    }

    @await Component.InvokeAsync("HeaderCart")
</li>